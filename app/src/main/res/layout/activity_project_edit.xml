<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/project_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="project_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/project_edit_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date"
            android:hint="start_date"/>

        <EditText
            android:id="@+id/project_edit_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date"
            android:hint="end_date"/>

    </LinearLayout>

    <EditText
        android:id="@+id/project_edit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="project_details"/>

    <TextView
        android:id="@+id/project_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:text="delete"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        android:textSize="16sp"/>

</LinearLayout>